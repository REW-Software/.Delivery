<%= form_for @address, url: user_addresses_path do |form| %>
  <div class="mx-5">
    <div class="d-flex row w-25 mt-2">
      <div class="h5">
        <%= form.label :cep, "CEP", class: "text-info" %>
      </div>

      <%= form.text_field :cep, placeholder: "xxxxx-xxx" %>

      <% @address.errors.full_messages_for(:cep).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="d-flex row w-25 mt-3">
      <div class="h5">
        <%= form.label :city, "Cidade", class: "text-info" %>
      </div>

      <%= form.text_field :city %>

      <% @address.errors.full_messages_for(:city).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="d-flex row w-25 mt-3">
      <div class="h5">
      <%= form.label :district, "Bairro", class: "text-info" %>
      </div>

      <%= form.text_field :district %>

      <% @address.errors.full_messages_for(:district).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="d-flex row w-25 mt-3">
      <div class="h5">
        <%= form.label :street, "Rua", class: "text-info" %>
      </div>

      <%= form.text_field :street %>

      <% @address.errors.full_messages_for(:street).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="d-flex row w-25 mt-3">
      <div class="h5">
        <%= form.label :number, "Número", class: "text-info" %>
      </div>

      <%= form.text_field :number %>

      <% @address.errors.full_messages_for(:number).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="mx-4 mt-4">
    <%= form.submit "Adicionar endereço", class: "w-25 btn btn-lg btn-primary" %>
  </div>
<% end %>