<%= form_with model: @sale do |form| %>
  <div class="mx-5">
    <div class="d-flex row w-50 mt-1">
      <div class="h5">
        <%= form.label :client_name, "Nome do cliente", class: "text-info" %>
      </div>

      <div>
        <%= form.select :client_name, @clients.collect {|client| [client.name, client.email]}, class: "form-select" %>
      </div>
    
      <% @sale.errors.full_messages_for(:client_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="d-flex row w-50 mt-4">
      <div class="h5">
        <%= form.label :payment_type, "Pagamento", class: "text-info" %>
      </div>

      <div>
        <%= form.select :payment_type, [['Dinheiro', :money], ['CartÃ£o', :card]], class: "form-select" %>
      </div>

      <% @sale.errors.full_messages_for(:payment_type).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <%= hidden_field_tag(:post_id, @post.id) %>
    <div class="mt-5">
      <%= form.submit button_text, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>